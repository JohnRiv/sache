.extension-list
  %table
    %thead
      %tr
        %td
          Name
        %td
          Description
        %td
          Tags
        %td
          Author
        %td
          Stars
    %tbody
      - @extensions.each do  |e|
        %tr
          %td{:class => "card-title"}
            %a{:class => "title-link"}
              = e.name
          %td{:class => "card-description"}
            = e.description
          %td.tag-list
            - e.tags.each do |tag|

              %a{:href => "tag/#{tag}", :class => "tag"}
                = tag

          %td{:class => "author"}
            %a{:href => "/user/#{e.author}", :class => "author-filter"}
              = e.author
          %td{:class => "ghub-stars"}
            = e.watchers